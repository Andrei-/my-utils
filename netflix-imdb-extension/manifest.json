{
  "manifest_version": 3,
  "name": "Netflix IMDb Ratings",
  "version": "1.0",
  "description": "Display IMDb ratings on Netflix titles",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.netflix.com/*",
    "https://www.omdbapi.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
